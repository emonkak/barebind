{
  "name": "barebind",
  "version": "0.1.0",
  "exports": {
    ".": {
      "import": "./src/index.ts"
    },
    "./addons/*": {
      "import": "./src/addons/*.ts"
    },
    "./internal": {
      "import": "./src/internal.js"
    }
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": "./lib/index.js",
        "types": "./lib/index.d.ts"
      },
      "./addons/*": {
        "import": "./lib/addons/*.js",
        "types": "./lib/addons/*.d.ts"
      },
      "./internal": {
        "import": "./lib/internal.js",
        "types": "./lib/core.d.ts"
      }
    }
  },
  "type": "module",
  "author": "Shota Nozaki",
  "license": "MIT",
  "scripts": {
    "build": "tsc --build",
    "build:all": "pnpm run build && pnpm run --recursive --parallel build",
    "clean": "rm -fr coverage lib",
    "clean:all": "pnpm run --include-workspace-root --recursive --parallel clean",
    "lint": "biome ci",
    "ci": "pnpm run clean:all && pnpm run lint && pnpm run build:all && pnpm test --coverage",
    "test": "vitest run",
    "watch": "tsc --build --watch --preserveWatchOutput",
    "watch:all": "pnpm run --include-workspace-root --recursive --parallel watch"
  },
  "dependencies": {
    "navigation-api-types": "^0.6.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@vitest/browser": "^4.0.16",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "4.0.16",
    "playwright": "^1.57.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "sideEffects": false
}
