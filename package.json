{
  "name": "@emonkak/ebit",
  "version": "0.0.0",
  "exports": {
    ".": {
      "import": "./src/index.ts"
    },
    "./extensions": {
      "import": "./src/extensions/index.ts"
    },
    "./extensions/jsx-dev-runtime": {
      "import": "./src/extensions/jsx-runtime.ts"
    },
    "./extensions/jsx-runtime": {
      "import": "./src/extensions/jsx-runtime.ts"
    },
    "./extensions/router": {
      "import": "./src/extensions/router/index.ts"
    }
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": "./lib/index.js",
        "types": "./lib/index.d.ts"
      },
      "./extensions": {
        "import": "./lib/extensions/index.js",
        "types": "./lib/extensions/index.d.ts"
      },
      "./extensions/jsx-dev-runtime": {
        "import": "./lib/extensions/jsx-runtime.js",
        "types": "./lib/extensions/jsx-runtime.d.ts"
      },
      "./extensions/jsx-runtime": {
        "import": "./lib/extensions/jsx-runtime.js",
        "types": "./lib/extensions/jsx-runtime.d.ts"
      },
      "./extensions/router": {
        "import": "./lib/extensions/router/index.js",
        "types": "./lib/extensions/router/index.d.ts"
      }
    }
  },
  "type": "module",
  "author": "Shota Nozaki",
  "license": "MIT",
  "scripts": {
    "build": "tsc --build",
    "build:all": "pnpm run --include-workspace-root --recursive build",
    "clean": "tsc --build --clean",
    "clean:all": "pnpm run --include-workspace-root --recursive --parallel clean",
    "lint": "npx biome ci",
    "ci": "pnpm run build && pnpm run --recursive --parallel build && pnpm run lint && pnpm test -- --coverage",
    "test": "vitest run",
    "watch": "tsc --build --watch --preserveWatchOutput",
    "watch:all": "pnpm run --include-workspace-root --recursive --parallel watch"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "playwright": "^1.54.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "sideEffects": false
}
