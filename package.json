{
  "name": "@emonkak/ebit",
  "version": "0.1.0",
  "exports": {
    ".": {
      "import": "./src/index.ts"
    },
    "./core": {
      "import": "./src/core.ts"
    },
    "./extensions/*": {
      "import": "./src/extensions/*.ts"
    }
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": "./lib/index.js",
        "types": "./lib/index.d.ts"
      },
      "./core": {
        "import": "./lib/extensions/core.js",
        "types": "./lib/extensions/core.d.ts"
      },
      "./extensions/*": {
        "import": "./lib/extensions/*.js",
        "types": "./lib/extensions/*.d.ts"
      }
    }
  },
  "type": "module",
  "author": "Shota Nozaki",
  "license": "MIT",
  "scripts": {
    "build": "tsc --build",
    "build:all": "pnpm run build && pnpm run --recursive --parallel build",
    "clean": "tsc --build --clean",
    "clean:all": "pnpm run --include-workspace-root --recursive --parallel clean",
    "lint": "biome ci",
    "ci": "pnpm run build:all && pnpm run lint && pnpm test --coverage",
    "test": "vitest run",
    "watch": "tsc --build --watch --preserveWatchOutput",
    "watch:all": "pnpm run --include-workspace-root --recursive --parallel watch"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "playwright": "^1.54.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "sideEffects": false
}
