{
  "files": {
    "ignore": ["coverage", "lib", "node_modules"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "rules": {
      "complexity": {
        "noBannedTypes": "off"
      },
      "correctness": {
        "noUnusedLabels": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noUselessElse": "off",
        "useEnumInitializers": "off",
        "useTemplate": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noConfusingLabels": "off",
        "noConfusingVoidType": "off",
        "noExplicitAny": "off"
      }
    }
  },
  "overrides": [
    {
      "include": ["**/*.d.ts"],
      "linter": {
        "rules": {
          "style": {
            "noVar": "off"
          }
        }
      }
    }
  ]
}
